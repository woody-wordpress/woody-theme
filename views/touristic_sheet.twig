{% extends "base.twig" %}

{% block content %}
    {# TODO: Contextiualisation du breadcrumb selon la playlist source #}
    {# {% block page_teaser %}
                                        <header id="the-page-teaser" class="page-teaser">
                                            {{ page_teaser }}
                                        </header>
                                {% endblock %} #}
    <main class="content-type-page">
        <div class="content-wrapper">
            {% if page_parts.mobile_header_custom %}
                {{ page_parts.mobile_header_custom }}
            {% else %}
                <div class="mobile-header hide-for-xlarge title-bar">
                    <div class="brand-logo obf" data-obf="{{ home_url|base64Encode }}">
                        {{ mobile_logo|default(website_logo) }}
                    </div>
                </div>
            {% endif %}

            {% if sheet_tourism.content|default %}
                <div class="page-sheet-wrapper">
                    {{ sheet_tourism.content }}
                </div>
            {% endif %}
            {% if 'claims' in enabled_woody_options %}
                <div class="claims-blocks-wrapper"></div>
            {% endif %}
        </div>
    </main>
{% endblock content %}


{% block styles %}
    <link href="https://api.tourism-system.com/render/assets/angular/styles/vendor.css" rel="stylesheet">
{% endblock styles %}

{% block inline_scripts %}
    <!-- DrupalAngularConfig generated by Wordpress  -->
    <script>
        DrupalAngularConfig.fetcherType = "{{ fetcherType|default }}" || null;
        DrupalAngularConfig.lang = "{{ lang|default('fr') }}";{% if timezone is defined %}DrupalAngularConfig.timezone = "{{ timezone|default('Europe/Paris') }}";{% endif %}{% if season is defined %}DrupalAngularConfig.season = "{{ season|default }}" || null;{% endif %}
    </script>
{% endblock inline_scripts %}
